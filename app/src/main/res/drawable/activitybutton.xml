<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#87C4DF" />
            <gradient android:angle="-90" android:startColor="#81B5DD" android:endColor="#A0D2FA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#79C2E3" />
            <solid android:color="#87B8DF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#98D7F4" />
            <gradient android:angle="-90" android:startColor="#8FC2EC" android:endColor="#8E96C3" />
        </shape>
    </item>
</selector>