<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity">


    <!--
        <TextView
            android:id="@+id/ulke_text_detail_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:text="Country:"
            android:textSize="20sp" />
        -->

    <ImageView
        android:id="@+id/detail_activityImageView"
        android:layout_width="0dp"
        android:layout_height="189dp"
        android:layout_marginTop="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_launcher_background"></ImageView>

    <TextView
        android:id="@+id/sehir_text_detail_activity"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@drawable/ic_action_city"
        android:text="City:"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/weatherof_text_detail_activity"
        app:layout_constraintStart_toEndOf="@+id/weatherof_text_detail_activity"></TextView>

    <TextView
        android:id="@+id/corona_text_detail_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:drawableLeft="@drawable/ic_action_corona"
        android:text="Corona:"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toEndOf="@+id/weatherof_text_detail_activity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherof_text_detail_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:drawableLeft="@drawable/ic_action_weather"
        android:text="Weather:"

        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goto_Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/activitybutton"
        android:text="Go to Map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <fragment
        android:id="@+id/mapDetail"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        android:layout_width="407dp"
        android:layout_height="203dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_activityImageView"
        app:layout_constraintVertical_bias="0.97"
        tools:context="com.example.myapplication.view.DetailActivity"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
