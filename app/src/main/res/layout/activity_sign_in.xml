<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".view.SignInActivity">


    <EditText
        android:id="@+id/user_name_signup_activity"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="271dp"
        android:background="#ECEFF1"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="  user name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/signup_button_signup_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:onClick="signUp"
        android:text="Sıgn Up"
        app:layout_constraintBaseline_toBaselineOf="@+id/signin_button_signup_activity"
        app:layout_constraintStart_toStartOf="@+id/password_text_signup_activity" />

    <Button
        android:id="@+id/signin_button_signup_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/mybutton"
        android:onClick="signIn"
        android:text="Sıgn In"
        app:layout_constraintEnd_toEndOf="@+id/password_text_signup_activity"
        app:layout_constraintTop_toBottomOf="@+id/password_text_signup_activity" />

    <EditText
        android:id="@+id/password_text_signup_activity"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="#ECEFF1"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="  password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/user_name_signup_activity"
        app:layout_constraintTop_toBottomOf="@+id/user_name_signup_activity" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/user_name_signup_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noback" />

</androidx.constraintlayout.widget.ConstraintLayout>